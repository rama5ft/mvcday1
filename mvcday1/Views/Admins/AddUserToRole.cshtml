@model mvcday1.ViewModel.RoleViewModel
@{
    ViewBag.Title = "AddUserToRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AddUserToRole</h2>
<div class="form-group">
    @Html.LabelFor(c => c.EmailId)
    @Html.TextBoxFor(c => c.EmailId, new { @class = "form-text text-muted", autocomplte = "off", required = true })
    @Html.ValidationMessageFor(c => c.EmailId)
</div>
<div class="form-group" style="color:darkviolet">
    @Html.LabelFor(c => c.Roles)
    @Html.DropDownListFor(c=>c.RoleName,new SelectList(Model.Roles,"Name","Name"), new { @class = "form-control", autocomplte = "off" })
    @Html.ValidationMessageFor(c => c.RoleName)
</div>
